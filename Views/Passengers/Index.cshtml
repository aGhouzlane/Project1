@model IEnumerable<Project1.Data.Passenger>

@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary" asp-controller="Passengers" asp-action="Create">Add a passenger</a>
    </div>
    <hr />
    <div class="col-md-12">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Job)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Age)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var passenger in Model)
                {
                    <tr class="active-row">
                        <td>@Html.DisplayFor(modelItem => passenger.Name)</td>
                        <td>@Html.DisplayFor(modelItem => passenger.Job)</td>
                        <td>@Html.DisplayFor(modelItem => passenger.Email)</td>
                        <td>@Html.DisplayFor(modelItem => passenger.Age)</td>
                        <td>@Html.ActionLink("Details", "Details", new { id = passenger.PassengerId })</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = passenger.PassengerId })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
