@model Project1.Data.Passenger

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Passenger Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Job)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Job)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
    <h4>Flights Associated</h4>
    <hr />
    <table>
        <tr style="background-color: #b0d6fe">
            <th style="border-top: solid; padding: 10px;">Flight Number</th>
            <th style="border-top: solid; padding: 10px;">Departure Date</th>
            <th style="border-top: solid; padding: 10px;">Arrival Date</th>
            <th style="border-top: solid; padding: 10px;">Departure Time</th>
            <th style="border-top: solid; padding: 10px;">Arrival Time</th>
            <th style="border-top: solid; padding: 10px;">Departure Airport</th>
            <th style="border-top: solid; padding: 10px;">Arrival Airport</th>
            <th style="border-top: solid; padding: 10px;">Booking Number</th>
        </tr>
        @foreach (var flight in Model.Flights)
        {
            <tr>
                <td style="border-top: solid; padding: 10px;">@Html.DisplayFor(modelItem => flight.FlightNumber)</td>
                <td style="border-top: solid; padding: 10px;">@Html.DisplayFor(modelItem => flight.DepartureDate)</td>
                <td style="border-top: solid; padding: 10px;">@Html.DisplayFor(modelItem => flight.ArrivalDate)</td>
                <td style="border-top: solid; padding: 10px;">@Html.DisplayFor(modelItem => flight.DepartureTime)</td>
                <td style="border-top: solid; padding: 10px;">@Html.DisplayFor(modelItem => flight.ArrivalTime)</td>
                <td style="border-top: solid; padding: 10px;">@Html.DisplayFor(modelItem => flight.DepartureAirport)</td>
                <td style="border-top: solid; padding: 10px;">@Html.DisplayFor(modelItem => flight.ArrivalAirport)</td>
                <td style="border-top: solid; padding: 10px;">@Html.DisplayFor(modelItem => flight.BookingNumber)</td>
            </tr>
        }
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.PassengerId }) |
    <a asp-action="Index">Back to List</a>
</div>
