@model Project1.Data.Passenger

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Passenger Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Job)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Job)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
   
    <h4>Flights Associated</h4>
    <hr />
    <table>
        <tr style="background-color: #b0d6fe">
            <th>Flight Number</th>
            <th>Departure Date</th>
            <th>Arrival Date</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Departure Airport</th>
            <th>Arrival Airport</th>
            <th>Booking Number</th>
        </tr>
        <tbody>
            @foreach (var flight in Model.Flights)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => flight.FlightNumber)</td>
                    <td>@Html.DisplayFor(modelItem => flight.DepartureDate)</td>
                    <td>@Html.DisplayFor(modelItem => flight.ArrivalDate)</td>
                    <td>@Html.DisplayFor(modelItem => flight.DepartureTime)</td>
                    <td>@Html.DisplayFor(modelItem => flight.ArrivalTime)</td>
                    <td>@Html.DisplayFor(modelItem => flight.DepartureAirport)</td>
                    <td>@Html.DisplayFor(modelItem => flight.ArrivalAirport)</td>
                    <td>@Html.DisplayFor(modelItem => flight.BookingNumber)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.PassengerId }) |
    <a asp-action="Index">Back to List</a>
</div>
